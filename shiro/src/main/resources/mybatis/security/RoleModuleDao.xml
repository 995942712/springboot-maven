<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ming.shiro.security.dao.RoleModuleDao">

    <resultMap id="RoleModules" type="com.ming.shiro.security.domain.RoleModule">
        <result column="role_id" property="roleId" jdbcType="INTEGER" />
        <result column="module_id" property="moduleId" jdbcType="INTEGER" />
    </resultMap>

    <sql id="roleModuleColumn">
        role_id roleId,
        module_id moduleId
    </sql>

    <select id="findAll" resultMap="RoleModules">
        select
          <include refid="roleModuleColumn" />
        from sys_role_module
    </select>

    <select id="findList" parameterType="com.ming.shiro.security.domain.RoleModule" resultMap="RoleModules">
        select
          <include refid="roleModuleColumn" />
        from sys_role_module
        <where>
            1 = 1
            <if test="roleId != null">
                and role_id = #{roleId, jdbcType=INTEGER},
            </if>
            <if test="moduleId != null">
                and module_id = #{moduleId, jdbcType=INTEGER},
            </if>
        </where>
    </select>

    <insert id="save" parameterType="com.ming.shiro.security.domain.RoleModule">
        insert into sys_role_module(
            role_id,
            module_id
        ) values (
            #{roleId, jdbcType=INTEGER},
            #{moduleId, jdbcType=INTEGER}
        )
    </insert>

    <update id="update" parameterType="com.ming.shiro.security.domain.RoleModule">
        update sys_role_module
        <set>
            <if test="roleId != null">
                role_id = #{roleId, jdbcType=INTEGER},
            </if>
            <if test="moduleId != null">
                module_id = #{moduleId, jdbcType=INTEGER},
            </if>
        </set>
        where id = #{id, jdbcType=INTEGER}
    </update>

    <delete id="delete" parameterType="com.ming.shiro.security.domain.RoleModule">
        delete table sys_role_module
        <where>
            1 = 1
            <if test="roleId != null">
                and role_id = #{roleId, jdbcType=INTEGER},
            </if>
            <if test="moduleId != null">
                and module_id = #{moduleId, jdbcType=INTEGER},
            </if>
        </where>
    </delete>

</mapper>