<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ming.shiro.security.dao.UserRoleDao">

    <resultMap id="UserRoles" type="com.ming.shiro.security.domain.UserRole">
        <result column="user_id" property="userId" jdbcType="INTEGER" />
        <result column="role_id" property="roleId" jdbcType="INTEGER" />
    </resultMap>

    <sql id="userRoleColumn">
        user_id,
        role_id
    </sql>

    <select id="findAll" resultMap="UserRoles">
        select
        <include refid="userRoleColumn" />
        from sys_user_role
    </select>

    <select id="findList" parameterType="com.ming.shiro.security.domain.UserRole" resultMap="UserRoles">
        select
        <include refid="userRoleColumn" />
        from sys_user_role
        <where>
            1 = 1
            <if test="userId != null">
                and user_id = #{userId, jdbcType=INTEGER},
            </if>
            <if test="roleId != null">
                and role_id = #{roleId, jdbcType=INTEGER},
            </if>
        </where>
    </select>

    <insert id="save" parameterType="com.ming.shiro.security.domain.UserRole">
        insert into sys_user_role(
            user_id,
            role_id
        ) values (
            #{userId, jdbcType=INTEGER},
            #{roleId, jdbcType=INTEGER}
        )
    </insert>

    <update id="update" parameterType="com.ming.shiro.security.domain.UserRole">
        update sys_user_role
        <set>
            <if test="userId != null">
                user_id = #{userId, jdbcType=INTEGER},
            </if>
            <if test="roleId != null">
                role_id = #{roleId, jdbcType=INTEGER},
            </if>
        </set>
        where id = #{id, jdbcType=INTEGER}
    </update>

    <delete id="delete" parameterType="com.ming.shiro.security.domain.UserRole">
        delete table sys_user_role
        <where>
            1 = 1
            <if test="userId != null">
                and user_id = #{userId, jdbcType=INTEGER}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId, jdbcType=INTEGER}
            </if>
        </where>
    </delete>

</mapper>